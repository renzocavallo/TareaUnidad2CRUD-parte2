<main class="agregar">
<div>
<h4>Nueva novedad</h4>
<button class="volver"><a href="/admin/agregar/volver">Volver</a></button><p>Al listado de novedades</p>
<form action="/admin/novedades/agregar" method="post">
<div class="form-group">
<input type="text" class="form-control" placeholder="Título" name="titulo">
<textarea type="text" class="form-control" placeholder="Subtítulo" name="subtitulo"></textarea>
<textarea  class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
<button type="submit" class="btn btn-primary">Guardar</button>
</div>
</form>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}
</div>
</main>